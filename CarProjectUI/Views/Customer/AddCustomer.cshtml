    <script>
        $(function () {
            $('#City').change(function () {
                var id = $('#City').val();
                $.ajax({
                    url: '/Customer/GetTown',
                    data: { p: id },
                    type: "POST",
                    dataType: "Json",
                    success: function (data) {
                        console.log(data);
                        $('#Town').empty();
                        for (var i = 0; i < data.length; i++) {
                            $('#Town').append("<option value='" + data[i].value + "' > " + data[i].text + " </option>");
                        }
                    }
                });
            });
        });
    </script>
